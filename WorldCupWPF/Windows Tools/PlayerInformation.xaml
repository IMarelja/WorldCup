<Window x:Name="windowPlayerInformation" x:Class="WorldCupWPF.Windows_Tools.PlayerInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldCupWPF.Windows_Tools"
        mc:Ignorable="d" Height="273" Width="215" Loaded="PlayerInformation_Loaded" ResizeMode="NoResize">
    <Grid Margin="0,0,0,6">
        <Label x:Name="lbName" Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="180"/>
        <Label x:Name="lbShirtNumber" Content="Shirt Number" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbPosition" Content="Position" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbCaptain" Content="Captain" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbGoals" Content="Goals" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbYellowCards" Content="Yellow cards" HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbGoalsCount" Content="null" HorizontalAlignment="Left" Margin="100,158,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbYellowCardsCount" Content="null" HorizontalAlignment="Left" Margin="100,184,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="lbMatch" Content="Match" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="180"/>
        <Image x:Name="imagePlayer" Margin="108,23,21,142" Source="/Windows Tools/default-picture.png"/>

    </Grid>
</Window>
